<p id="notice"><%= notice %></p>

<h1>Listing Leads</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Budget</th>
      <th>Temperature</th>
      <th>Excitement</th>
      <th>Notes</th>
      <th>Won</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @leads.each do |lead| %>
      <tr>
        <td><%= lead.name %></td>
        <td><%= lead.description %></td>
        <td><%= lead.budget %></td>
        <td><%= lead.temperature %></td>
        <td><%= lead.excitement %></td>
        <td><%= lead.notes %></td>
        <td><%= lead.won %></td>
        <td><%= lead.active %></td>
        <td><%= link_to 'Show', lead %></td>
        <td><%= link_to 'Edit', edit_lead_path(lead) %></td>
        <td><%= link_to 'Destroy', lead, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

